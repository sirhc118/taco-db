# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=taco_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# Alternative: Supabase Connection String
# DATABASE_URL=postgresql://user:password@host:port/database

# API Security
API_SECRET_KEY=your_secret_key_here_minimum_32_characters
JWT_SECRET=your_jwt_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Discord Bot Tokens (for verification)
TACO_AUTH_BOT_TOKEN=
TACO_TASK_BOT_TOKEN=
TACO_GAME_BOT_TOKEN=
TACO_REWARD_BOT_TOKEN=

# TikTok Scraping
TIKTOK_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Cron Job Settings
ENABLE_CRON=true
COMMENT_COLLECTION_CRON=0 6 * * * # Daily at UTC 06:00
METRICS_UPDATE_CRON=0 2 * * * # Daily at 2 AM
TASK_CLEANUP_CRON=*/15 * * * * # Every 15 minutes

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/taco-backend.log

# External Services
TREMENDOUS_API_KEY=
TREMENDOUS_ENV=sandbox

# Features
ENABLE_ADMIN_PANEL=true
ENABLE_ANALYTICS=true
